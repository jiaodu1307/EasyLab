.stats-card {
  background: linear-gradient(135deg, #1AAD19 0%, #2ecc71 100%);
  color: #fff;
}

.stats-item {
  text-align: center;
  padding: 20rpx 0;
}

.stats-label {
  display: block;
  font-size: 24rpx;
  margin-bottom: 8rpx;
  opacity: 0.9;
}

.stats-value {
  font-size: 36rpx;
  font-weight: bold;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.quick-actions {
  grid-template-columns: repeat(2, 1fr);
}

.quick-action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  padding: 32rpx;
  border-radius: 12rpx;
}

.quick-action-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 16rpx;
}

.warning-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.warning-item:last-child {
  border-bottom: none;
}

.warning-info {
  display: flex;
  flex-direction: column;
}

.warning-name {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.warning-type {
  font-size: 24rpx;
}

.warning-value {
  font-size: 28rpx;
  font-weight: bold;
}

.operation-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.operation-item:last-child {
  border-bottom: none;
}

.operation-info {
  display: flex;
  flex-direction: column;
}

.operation-type {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.operation-name {
  font-size: 28rpx;
}

.operation-time {
  font-size: 24rpx;
}